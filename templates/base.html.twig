<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>Round Texel Medewerkers {% block title %}{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="assets/vendor/bootswatch/spacelab/bootstrap.min.css">
            <link rel="stylesheet" href="assets/vendor/font-awesome/css/font-awesome.min.css">
            <link rel="stylesheet" href="assets/vendor/bootstrap-switch/dist/css/bootstrap3/bootstrap-switch.min.css">
            <link rel="stylesheet" href="assets/vendor/bootstrap-datepicker/dist/css/bootstrap-datepicker3.min.css">
            <link rel="stylesheet" href="assets/vendor/roundtexel/css/extender.css">
            {% block extraStylesheets %}{% endblock %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="favicon.ico" />
    </head>
    <body>
        <header class="container">
            <div class="row">
                <div class="col-lg-1 hidden visible-lg">
                	<img src="https://registrations.roundtexel.com/assets/images/ROTLogo.png" alt="logo" class="img-responsive">
                </div>
            </div>
        </header>
        <nav class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav nav">
                        <li><a href="#">Home</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Afdelingen <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                {% for a in afdelingen %}
                                    <li><a href="//{{a.frontName}}.{{host}}">{{ a.frontName }}</a></li>
                                {% endfor %}
                                {#<li><a href="#">Veiligheid</a></li>
                                <li><a href="#">Transport</a></li>
                                <li><a href="#">Wedstrijd</a></li>
                                <li><a href="#">Strand</a></li>
                                <li><a href="#">Fourage</a></li>
                                <li><a href="#">Tent</a></li>
                                <li><a href="#">Vergunningen</a></li>
                                <li><a href="#">Pr & Media</a></li>
                                <li><a href="#">Informatie</a></li>
                                <li><a href="#">Kleding</a></li>#}
                            </ul>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="{{ path('login') }}">Login</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <main class="container">
            <div class="row">
                <div class="col-xs-12">
                    {% block content %}
                        {% if afdeling is defined %}
                            <form type="post" action="{{ path("afdeling", { "frontName": afdeling.frontName|raw }) }}" enctype="multipart/form-data">
                        {% endif %}
                        {% if content%}
                            {{ content.waarde|raw|nl2br }}
                        {% endif %}
                        {% if afdeling is defined %}
                            </form>
                        {% endif %}
                    {% endblock %}
                </div>
            </div>
        </main>
        {#{% block body %}{% endblock %}#}
        {% block javascripts %}
            <script src="assets/vendor/jquery/jquery.min.js"></script>
            <script src="assets/vendor/bootstrap/dist/js/bootstrap.min.js"></script>
            <script src="assets/vendor/bootstrap-switch/dist/js/bootstrap-switch.min.js"></script>
            <script src="assets/vendor/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
            {% block customscripts %}{% endblock %}
        {% endblock %}
    </body>
</html>